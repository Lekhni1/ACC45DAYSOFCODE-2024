#include <iostream>
#include <algorithm>
using namespace std;

int main() {
    int T; // Number of test cases
    cin >> T;

    while (T--) {
        int X, Y; // Minimum points needed, remaining matches
        cin >> X >> Y;

        // Calculate minimum wins required
        int minimumWins = max(0, X - Y);
        
        // Print the result
        cout << minimumWins << endl;
    }

    return 0;
}
