#include <iostream>
#include <cmath>

int main() {
    int T;
    std::cin >> T;  // number of test cases

    for (int i = 0; i < T; i++) {
        int X, Y;
        std::cin >> X >> Y;  // read X and Y
        int diff = std::abs(X - Y);
        int ops = diff + (X < Y ? 1 : 0);
        std::cout << ops << std::endl;
    }

    return 0;
}
